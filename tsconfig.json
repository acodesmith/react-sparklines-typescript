{
  "compilerOptions": {
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "build",
    "webpack.config.js",
    "src/dataProcessing",
    "src/tests/**",
    "coverage"
  ]
}
